% provide the ragged outer option
\newcommand{\raggedouter}{%
	\checkoddpage%
    	\ifoddpage%
		\RaggedRight%
    	\else%
		\RaggedLeft%
    	\fi%
}%

% figure across the whole page including the margin	 	
\renewenvironment{figure*} 	
{\begin{figure}	 	
\checkoddpage%	
\ifoddpage% 	
\hspace{0pt}%	
\else%
\hspace{-120pt}%
\fi%
}
{\end{figure}}

